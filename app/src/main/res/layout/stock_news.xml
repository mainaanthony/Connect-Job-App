<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="145dp"
    android:layout_margin="10dp"
    android:elevation="6dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/article_adapter_ll_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="5dp">


        <TextView
            android:id="@+id/article_adapter_tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="100dp"
            android:maxLines="4"
            android:text="Headline"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/article_adapter_tv_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_adapter_tv_author"
            android:layout_marginEnd="100dp"
            android:text="time"
            android:textColor="#808080"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/article_adapter_tv_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_adapter_tv_description"
            android:layout_marginEnd="100dp"
            android:text="author"
            android:textColor="#808080"
            android:textSize="14sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/articleImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:scaleType="centerCrop"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>