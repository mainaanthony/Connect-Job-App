<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".localNews.NewsFragment">
    <HorizontalScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/newsStockbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Market"
        android:textColor="@color/purple_500"
        app:backgroundTint="@color/white"
        app:cornerRadius="50dp"
        android:textStyle="bold"
        app:rippleColor="@color/white"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="2dp"
        tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/newsestatebt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technology"
        android:layout_marginStart="10dp"
        android:textColor="@color/purple_500"
        app:backgroundTint="@color/white"
        app:cornerRadius="50dp"
        android:textStyle="bold"
        app:rippleColor="@color/white"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="2dp"
        tools:ignore="DuplicateSpeakableTextCheck,HardcodedText,TextContrastCheck" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/newsbondbt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Corporate Bonds"
        android:textColor="@color/purple_500"
        app:backgroundTint="@color/white"
        android:layout_marginStart="10dp"
        app:cornerRadius="50dp"
        android:textStyle="bold"
        app:rippleColor="@color/white"
        app:strokeColor="@color/purple_500"
        app:strokeWidth="2dp"
        tools:ignore="HardcodedText" />
</LinearLayout>
    </HorizontalScrollView>

    <FrameLayout
        android:id="@+id/news_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/scroll" />
</RelativeLayout>